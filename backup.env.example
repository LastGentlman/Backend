# AWS S3 Backup Configuration
# Copy this file to .env and fill in your actual values

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# S3 Bucket Configuration
S3_BUCKET=pedidolist-backups

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Optional: S3 Endpoint (for custom S3-compatible storage)
# S3_ENDPOINT=https://s3.amazonaws.com

# Optional: S3 Path Prefix
# S3_PATH_PREFIX=backups/

# Optional: Backup Encryption
# BACKUP_ENCRYPTION_KEY=your_encryption_key_here

# Optional: Backup Notifications
# BACKUP_NOTIFICATION_EMAIL=admin@pedidolist.com
# BACKUP_NOTIFICATION_WEBHOOK=https://hooks.slack.com/your-webhook-url

# Optional: Backup Scheduling
# BACKUP_SCHEDULE_CRON=0 2 * * *  # Daily at 2 AM
# BACKUP_AUTO_INCREMENTAL=true

# Optional: Backup Limits
# BACKUP_MAX_SIZE_MB=1000
# BACKUP_MAX_FILES=100

# Optional: Backup Monitoring
# BACKUP_MONITORING_ENABLED=true
# BACKUP_MONITORING_WEBHOOK=https://monitoring.example.com/webhook
